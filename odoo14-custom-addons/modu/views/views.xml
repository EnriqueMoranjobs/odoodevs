<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="modu.list">
      <field name="name">modu list</field>
      <field name="model">modu.modu</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="modu.action_window">
      <field name="name">modu window</field>
      <field name="res_model">modu.modu</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
