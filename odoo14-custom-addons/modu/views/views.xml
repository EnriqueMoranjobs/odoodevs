    <!-- Top menu item -->

    <menuitem name="modu" id="modu.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="modu.menu_1" parent="modu.menu_root"/>
    <menuitem name="Menu 2" id="modu.menu_2" parent="modu.menu_root"/>

    <!-- actions -->

    <menuitem name="Submenu1" id="modu.menu_1_list" parent="modu.menu_1"
              action="modu.action_window"/>
    <menuitem name="Submenu2" id="modu" parent="modu.menu_1"
              action="modu.action_window/>

  </data>
</odoo>